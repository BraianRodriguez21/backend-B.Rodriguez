<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Real Time Products</title>
</head>
<body>
    <h1>Listado de Productos en Tiempo Real</h1>
    <ul>
        {{#each products}}
            <li>{{this.title}} - Precio: ${{this.price}}</li>
        {{/each}}
    </ul>

    <form id="nuevoProductoForm">
        <input type="text" name="title" placeholder="Nombre del producto">
        <input type="text" name="price" placeholder="Precio">
        <button type="submit">Agregar Producto</button>
    </form>

    <script src="/socket.io/socket.io.js"></script>
    <script>
        const socket = io();

        const form = document.getElementById('nuevoProductoForm');
        form.addEventListener('submit', (event) => {
            event.preventDefault();
            const formData = new FormData(form);
            const producto = {
                title: formData.get('title'),
                price: formData.get('price')
            };
            socket.emit('nuevoProducto', producto);
        });

        socket.on('productoNuevo', (producto) => {
        });
    </script>
</body>
</html>

